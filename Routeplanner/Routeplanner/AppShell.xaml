<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Routeplanner.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Routeplanner"
    Shell.FlyoutBehavior="Disabled"
    Title="Routeplanner">

    <TabBar>
        <Tab Title="Plan" Route="plan">
            <ShellContent
                ContentTemplate="{DataTemplate local:PlannerPage}"/>
        </Tab>
        <Tab Title="Departures" Route="departures">
            <ShellContent
                ContentTemplate="{DataTemplate local:DeparturesPage}"/>
        </Tab>
    </TabBar>
</Shell>
<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Routeplanner.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Routeplanner"
    Shell.FlyoutBehavior="Disabled"
    Title="Routeplanner">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:PlanPage}"
        Route="MainPage" />

    <TabBar>
        <Tab Title="Plan">
            <ShellContent
                ContentTemplate="{DataTemplate local:PlanPage}"/>
        </Tab>
        <!--<Tab Title="Departures">
            <ShellContent
                ContentTemplate="{DataTemplate local:DeparturePage}"/>
        </Tab>-->
    </TabBar>
</Shell>
<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Routeplanner.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
           <Entry 
           Placeholder="Startpunt"
           TextChanged="{Binding TextChangeCommand}"
           Completed="{Binding TextCompleteCommand}"
           ClearButtonVisibility="WhileEditing"/>
            <Entry 
           Placeholder="Bestemming"
           TextChanged="OnEntryTextChanged"
           Completed="OnEntryCompleted"
           ClearButtonVisibility="WhileEditing"/>

            <TimePicker x:Name="TimePicker"
                        Time="{Binding SelectedTime}"
                        HorizontalOptions="Center"
                        VerticalOptions="Center"/>
            <DatePicker MinimumDate="{Binding MinDate}"
            MaximumDate="{Binding MaxDate}"
            Date="{Binding SelectedDate}" />
            <Picker x:Name="picker"
                Title="Selecteer een tijdstype">
                    <Picker.ItemsSource>
                        <x:Array Type="{x:Type x:String}">
                            <x:String>Vetrek</x:String>
                            <x:String>Aankomst</x:String>
                        </x:Array>
                    </Picker.ItemsSource>
            </Picker>
            <!-- <Button
                x:Name="searchBtn"
                Text="Opties tonen" 
                Clicked="OnCounterClicked"
                HorizontalOptions="Fill" />
            -->
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
